<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeOff.Cards.TimeOffRequestCard"
             xmlns:cards="clr-namespeace:TimeOff.Cards"
       MinimumHeightRequest="150">
    <Border
        MinimumHeightRequest="150"
        MaximumHeightRequest="150"
        VerticalOptions="Start"
        StrokeThickness="2">
        <VerticalStackLayout>
            <HorizontalStackLayout>
        <Label Text="Time Off" Margin="5" FontAttributes="Bold" />
            <Label Text="Approved" Margin="5" TextColor="Green" MinimumWidthRequest="270" HorizontalTextAlignment="End" HorizontalOptions="End"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
            <Label Text=" From" Margin="5"/>
                <Label Text="To" Margin="5" MinimumWidthRequest="270" HorizontalOptions="End" HorizontalTextAlignment="End"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="{Binding StartTime}" Margin="5" FontAttributes="Italic"/>
                <Label Text="{Binding EndTime}" Margin="5" MinimumWidthRequest="250" FontAttributes="Italic" HorizontalOptions="End" HorizontalTextAlignment="End"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
        
    </Border>

</Frame>